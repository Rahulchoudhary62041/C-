#include <iostream>
#include <bitset>

int main() {
    // Input: the decimal number to be converted
    int decimalNumber;
    std::cout << "Enter the decimal number: ";
    std::cin >> decimalNumber;

    // Converting decimal to binary
    std::cout << "Binary representation: " << std::bitset<8>(decimalNumber) << std::endl;

    return 0;
}
